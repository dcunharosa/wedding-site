# Database
DATABASE_URL="postgresql://wedding_user:wedding_password@localhost:5432/wedding_db?schema=public"

# API Server
API_PORT=3001
API_HOST=localhost
NODE_ENV=development

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# RSVP Configuration
RSVP_DEADLINE_AT="2026-06-01T23:59:59Z"
SONG_REQUEST_ENABLED="true"

# Email Provider (Dev Mode / SendGrid / Mailgun / Resend)
EMAIL_PROVIDER="console"
EMAIL_FROM="noreply@yourwedding.com"
EMAIL_FROM_NAME="Your Wedding"
COUPLE_NOTIFY_EMAILS="bride@example.com,groom@example.com"

# SendGrid (if using)
SENDGRID_API_KEY=""

# Mailgun (if using)
MAILGUN_API_KEY=""
MAILGUN_DOMAIN=""

# Resend (if using)
RESEND_API_KEY=""

# File Storage
STORAGE_PROVIDER="local" # local | s3 | r2
STORAGE_LOCAL_PATH="./uploads"
STORAGE_BASE_URL="http://localhost:3001/uploads"

# S3/R2 Configuration (if using)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""
AWS_BUCKET_NAME=""
AWS_ENDPOINT="" # For R2, use Cloudflare endpoint

# Public Web
NEXT_PUBLIC_API_URL="http://localhost:3001"
PUBLIC_WEB_PORT=3000

# Admin Web
NEXT_PUBLIC_ADMIN_API_URL="http://localhost:3001"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
ADMIN_WEB_PORT=3002

# Redis (for rate limiting)
REDIS_URL="redis://localhost:6379"

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_RSVP_MAX=10
